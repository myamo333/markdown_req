{
  "name": "test_req",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint:req:md": "markdownlint \"requirements/**/*.md\" --config requirements/.markdownlint.jsonc --ignore-path config/lint/.markdownlintignore",
    "lint:soft:md": "markdownlint \"soft_requirements/**/*.md\" --config soft_requirements/.markdownlint.jsonc --ignore-path config/lint/.markdownlintignore",
    "lint:req:text": "textlint \"requirements/**/*.md\" --config requirements/.textlintrc --ignore-path config/lint/.textlintignore",
    "lint:soft:text": "textlint \"soft_requirements/**/*.md\" --config soft_requirements/.textlintrc --ignore-path config/lint/.textlintignore",
    "lint:md": "npm run lint:req:md && npm run lint:soft:md",
    "lint:text": "npm run lint:req:text && npm run lint:soft:text",
    "lint:spell": "cspell \"requirements/**/*.md\" \"soft_requirements/**/*.md\" --config config/lint/.cspell.json",
    "format:req": "prettier \"requirements/**/*.md\" --config config/lint/.prettierrc --write",
    "format:soft": "prettier \"soft_requirements/**/*.md\" --config config/lint/.prettierrc --write",
    "format": "npm run format:req && npm run format:soft",
    "test": "npm run lint:md && npm run lint:text && npm run lint:spell"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "cspell": "^9.3.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "textlint": "^15.2.3",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.4",
    "textlint-rule-preset-japanese": "^10.0.4",
    "textlint-rule-prh": "^6.1.0"
  }
}
