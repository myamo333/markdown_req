  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.configFile": "${workspaceFolder}/config/lint/.cspell.json",
  "prettier.configPath": "${workspaceFolder}/config/lint/.prettierrc"
}
